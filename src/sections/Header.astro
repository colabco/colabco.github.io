---
import { Image } from "astro:assets"
import ColabLogo from "@/gfx/ColabLogo.svg";
---

<header
  id="navbar"
  class="w-full transition duration-300 justify-center py-4 fixed h-32 z-50 hidden md:flex"
>
  <Image src={ColabLogo} alt="logo" class="sitelogo drop-shadow-lg" />
</header>

<script>
  window.addEventListener("scroll", function () {
    const navbar = document.getElementById("navbar");
    if (!navbar) return;

    if (window.scrollY >= 20) {
      navbar.classList.remove("border-b-transparent");
      navbar.classList.remove("bg-transparent");
      navbar.classList.add("border-b");
      navbar.classList.add("border-b-slate-300");
      navbar.classList.add("bg-white");
    } else {
      navbar.classList.remove("border-b");
      navbar.classList.remove("border-b-slate-300");
      navbar.classList.remove("bg-white");
      navbar.classList.add("border-b-transparent");
      navbar.classList.add("bg-transparent");
    }
  });
</script>

<style>
  #navbar.bg-transparent img.sitelogo {
    @apply opacity-0;
  }
</style>
